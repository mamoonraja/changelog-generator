{
  "name": "custom-changelog-cli",
  "version": "0.0.1",
  "description": "A CLI to generate custom changelog",
  "private": true,
  "license": "SEE LICENSE IN License.txt",
  "bin": {
    "custom-changelog": "./src/cli.js"
  },
  "scripts": {
    "autofix": "eslint . --fix",
    "lint": "eslint .",
    "start": "node src/changelog.js",
    "test": "npm run lint && npm run test"
  },
  "dependencies": {
    "conventional-changelog": "^2.0.3",
    "conventional-changelog-core": "^3.1.0",
    "conventional-changelog-preset-loader": "^2.0.1",
    "commander": "^2.17.1",
    "timestring": "^5.0.1",
    "update-notifier": "^2.5.0"
  },
  "devDependencies": {
    "eslint": "^4.17.0",
    "jest": "^23.5.0"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add",
      "npx jest --bail --forceExit --findRelatedTests"
    ]
  },
  "ibmCloud": {
    "contributors": [
      "German Attanasio <germanatt@us.ibm.com> (@german)",
      "Mamoon Raja <mamoon.raja@ibm.com> (@mamoon.raja)"
    ]
  },
  "pre-commit": "lint-staged",
  "repository": {
    "type": "git",
    "url": "git@github.ibm.com:Mamoon/custom-changelog-cli"
  }
}
